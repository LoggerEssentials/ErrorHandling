{
	"name": "logger/errorhandling",
	"description": "Errorhandling extension for PSR-3 compatible loggers",
	"license": "MIT",
	"authors": [{
		"name": "ron",
		"email": "ron.kirschler@gmail.com"
	}],
	"require": {
		"php": ">= 7.0",
		"logger/essentials": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^8.0"
	},
	"autoload": {
		"psr-4": {
			"Logger\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Logger\\": ["src/", "tests/"]
		}
	},
	"suggest": {
		"logger/essentials": "Advanced logging component library"
	},
	"scripts": {
		"tests": "phpunit -c tests.xml"
	}
}